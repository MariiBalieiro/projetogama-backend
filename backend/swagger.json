{
    "openapi": "3.0.0",

    "info": {
        "title": "API do cadastro de currículos",
        "description": "API criada para o projeto de cadastro de currículos",
        "version": "0.0.1"
    
    },

    "servers": [
        {
            "url": "http://localhost:2800",
            "description": "ambiente de desenvolvimento"
        }
    ],

    "paths": {
        "/register": {
            "post": {
                "summary": "Cadastro do candidato",
                "description": "Rota de cadastro do usuário, recebe: nome, cargoPretendido, dataDeNascimento, sexo, estadoCivil, rua, numero, bairro, complemento, cep, cidade, estado, pais, email, telefone, celular, identidade, cpf, veiculo, habilitacao",
                "tags": ["candidato"],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "properties": {
                                    "nome": {
                                        "type": "string"
                                    },
                                    "cargoPretendido":{
                                        "type": "string"
                                    },
                                    "dataDeNascimento": {
                                        "type": "date"
                                    },
                                    "sexo": {
                                        "type": "string"
                                    },
                                    "estadoCivil": {
                                        "type": "string"
                                    },
                                    "rua": {
                                        "type": "string"
                                    },
                                    "numero": {
                                        "type": "string"
                                    },
                                    "bairro": {
                                        "type": "string"
                                    },
                                    "complemento": {
                                        "type": "string"
                                    },
                                    "cep": {
                                        "type": "string"
                                    },
                                    "cidade": {
                                        "type": "string"
                                    },
                                    "estado": {
                                        "type": "string"
                                    },
                                    "pais":{
                                        "type": "string"
                                    },
                                    "email": {
                                        "type": "string"
                                    },
                                    "telefone": {
                                        "type": "string"
                                    },
                                    "celular": {
                                        "type": "string"
                                    },
                                    "identidade": {
                                        "type": "string"
                                    },
                                    "cpf": {
                                        "type": "string"
                                    },
                                    "veiculo": {
                                        "type": "string"
                                    },
                                    "habilitacao": {
                                        "type": "string"
                                    }
                                }
                            },
                            "examples": {
                                "Cadastro Exemplo": {
                                    "value": {
                                        "nome": "Mariana Balieiro",
                                        "cargo": "xxxxxxx",
                                        "dataDeNascimento": "22222222",
                                        "sexo": "feminino",
                                        "estadoCivil": "solteira",
                                        "rua": "xxxxxxx",
                                        "numero": "xxxxxxx",
                                        "bairro": "xxxxxxx",
                                        "complemento": "xxxxxxx",
                                        "cep": "xxxxxxx",
                                        "cidade": "xxxxxxx",
                                        "estado": "xxxxxxx",
                                        "pais": "xxxxxxx",
                                        "email": "marianabalieiro123@hotmail.com",
                                        "telefone": "xxxxxxx",
                                        "celular": "xxxxxxx",
                                        "identidade": "xxxxxxx",
                                        "cpf": "xxxxxxx",
                                        "veiculo": "xxxxxxx",
                                        "habilitacao": "xxxxxxx"
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}
